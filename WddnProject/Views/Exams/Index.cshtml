@model ICollection<WDDNProject.Models.Exam>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<br />
@if (Model.Count == 0){
    <center><h1>No Exam Created</h1></center>
}
@if (Model.Count != 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                Subject
            </th>
            <th>
                Description
            </th>
            <th>
                StartTime
            </th>
            <th>
                End Time
            </th>
            <th>
                Created By
            </th>
            <th>
                Total Questions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ 
            int count = 0;
        }
@foreach (var item in Model)
{
    count++;
        <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.StartTime.DayOfWeek
                <br />
                @item.StartTime
            </td>
            <td>
                @item.EndTime.DayOfWeek
                <br />
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}